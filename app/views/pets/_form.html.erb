<%= form_with(model: pet, class: "contents") do |form| %>
  <% if pet.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul class="list-disc ml-6">
        <% pet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:name].none?, "border-red-400 focus:outline-red-600": pet.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :species %>
    <%= form.text_field :species, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:species].none?, "border-red-400 focus:outline-red-600": pet.errors[:species].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :age %>
    <%= form.number_field :age, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:age].none?, "border-red-400 focus:outline-red-600": pet.errors[:age].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:description].none?, "border-red-400 focus:outline-red-600": pet.errors[:description].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :adopted %>
    <%= form.check_box :adopted, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": pet.errors[:adopted].none?, "border-red-400 focus:outline-red-600": pet.errors[:adopted].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
