<%# 
  Força o card a ficar absolutamente centralizado na tela, 
  independente do layout do Rails.
%>
<div class=" w-full inset-0 flex items-center justify-center bg-transparent p-4">

  <div class="bg-[#c9791d] p-8 m-8 rounded-lg w-[800px] shadow-lg ">
    
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">
      Gerar Relatórios
    </h1>

    <%= form_with(url: admin_reports_path, method: :post, local: true, data: { turbo: false }) do |form| %>
      
      <div class="mb-6">
        <span class="block text-xl font-medium text-gray-700 mb-4">
          1. Escolha o Relatório:
        </span>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-2 justify-center">
          <div>
            <%= form.radio_button :report_type, 'user_report', id: 'report_type_user', class: "peer hidden", required: true %>
            <%= form.label :report_type_user, 
                class: "flex flex-col items-center justify-center w-full p-6 bg-white border-2 border-gray-300 rounded-lg cursor-pointer text-gray-600
                        hover:bg-gray-50 hover:text-gray-700
                        peer-checked:border-blue-600 peer-checked:bg-blue-50 peer-checked:text-blue-700" do %>
              <svg class="w-12 h-12 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <span class="text-xl font-semibold">Usuários</span>
            <% end %>
          </div>

          <div>
            <%= form.radio_button :report_type, 'adoption_report', id: 'report_type_adoption', class: "peer hidden" %>
            <%= form.label :report_type_adoption, 
                class: "flex flex-col items-center justify-center w-full p-6 bg-white border-2 border-gray-300 rounded-lg cursor-pointer text-gray-600
                        hover:bg-gray-50 hover:text-gray-700
                        peer-checked:border-blue-600 peer-checked:bg-blue-50 peer-checked:text-blue-700" do %>
              <svg class="w-12 h-12 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-xl font-semibold">Adoções</span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mb-8">
        <%= form.label :format, "2. Escolha o Formato de Saída:", class: "block text-xl font-medium text-gray-700 mb-4" %>
        <%= form.select :format, 
            [
              ['Visualizar na página (HTML)', 'html'],
              ['Baixar Arquivo (CSV/Excel)', 'csv']
            ], 
            {}, 
            { class: "w-full p-4 border border-gray-300 rounded-lg bg-white text-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
      </div>

      <div>
        <%= form.submit "Gerar Relatório", 
            class: "w-full bg-blue-600 text-white font-bold text-xl py-4 px-6 rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer transition duration-300 ease-in-out" %>
      </div>

    <% end %>

  </div>
</div>
